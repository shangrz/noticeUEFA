<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="team_flag_imageview">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dip</item>
    </style>
    
    <style name="team_flag_imageview_notice">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">6dip</item>
    </style>
    
  
    
    <style name="team_name_textview" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
         <item name="android:paddingLeft">5dp</item>
         
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/listviewtext_color</item>
    </style>
    
    
    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/mycheckbox</item>
    </style>
    <style name="team_name_textview_notice" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">80dp</item>
         
    </style>
    <style name="noticeitem_style">
        <item name="android:background">#FF111111</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>