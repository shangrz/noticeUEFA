<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00ffffff">
    
    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title">
        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_btn"
            android:layout_alignParentLeft="true"/>
                
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_dialog_title"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>
                
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="2dp"
            android:background="@drawable/bg_btn"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="#00ffffff"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etEdit"
                android:layout_width="fill_parent"
                android:layout_height="150dip"
                android:layout_margin="3dp"
                android:background="@null"
                android:capitalize="sentences"
                android:gravity="top|left"
                android:imeOptions="actionDone"
                android:isScrollContainer="true"
                android:singleLine="false" />
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/rlTotal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1" >

            <LinearLayout
                android:id="@+id/ll_text_limit_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_delwords"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_text_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="140"
                    android:textColor="#333" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_delwords" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/location_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:src="@android:drawable/ic_menu_mylocation" android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/location_btn"
              
                android:src="@android:drawable/ic_menu_camera" android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/photochoose_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/camera_btn"
                
                android:src="@android:drawable/ic_menu_gallery" android:visibility="invisible"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llImage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rlTotal"
            android:layout_below="@+id/rlTotal"
            android:background="#00ffffff"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/flPic"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="#00ffffff"
                android:visibility="gone" >

                 

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/image_background" android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/ivDelPic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:src="@drawable/del_pic" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>