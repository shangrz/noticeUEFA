<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayoutManage"
	android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:paddingLeft="12dip" android:paddingRight="8dip"
	android:paddingBottom="6dip"
	android:paddingTop="2dip"
	>


	<ImageView android:id="@+id/ImageView01"
		android:layout_alignParentLeft="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginTop="2dip" android:layout_centerVertical="true"
		 android:src="@android:drawable/stat_notify_sync_noanim"
		 android:scaleType="fitCenter"></ImageView>
	<RelativeLayout android:layout_width="wrap_content"
		android:id="@+id/relativeLayout1" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/ImageView01"
		android:layout_alignParentTop="true"   
		 android:layout_marginRight="3dip"  
		 android:paddingLeft="10dp"
		 android:paddingTop="5dp" android:paddingBottom="5dp">
    <TextView android:text="TextView03" android:layout_width="wrap_content"
            android:textColor="@color/white" android:id="@+id/ItemName"
            android:textSize="14dip" android:layout_height="wrap_content"
            android:textStyle="bold" android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/ItemText"></TextView>
		<TextView android:text="TextView02" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/ItemText"
			android:textSize="12dip"  
			android:layout_below="@+id/ItemName"  
			android:textColor="@color/white"/>
		<TextView android:text="1-1 20:20" android:layout_width="wrap_content"
			android:textColor="#FD9126" android:id="@+id/ItemDate"
			android:textSize="12dip" android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/ItemName"
			android:layout_alignParentRight="true"  ></TextView>
	 
	</RelativeLayout>



</RelativeLayout>