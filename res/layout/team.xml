<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content" android:gravity="center"
                android:layout_height="90dip" android:background="@color/white">
    <ImageView android:id="@+id/teamlogo" android:layout_centerHorizontal="true" android:src="@drawable/eng"
               style="@style/team_flag_selection"></ImageView>
    <TextView android:layout_below="@id/teamlogo" android:paddingTop="20dip" android:id="@+id/name"
              style="@style/team_name"
              android:text="英格兰" android:layout_centerHorizontal="true"></TextView>
</RelativeLayout>